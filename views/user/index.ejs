<!DOCTYPE html>
<html lang="en">
    <%- include("_header")%>
    <body>
        <!-- Navigation-->
        
        <%- include("_nav")%>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Clean Blog</h1>
                            <h6>Welcome <%=user.firstname.toUpperCase()%> <%=user.lastname.toUpperCase()%></h6>
                            <a class="btn btn-success" href="/user/new">new</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7"> 
                    <!-- Post preview-->
                   <%articles.map((blog)=>{%>
                    <div class="post-preview">
                        <a href="article/<%= blog._id %>">
                            <h2 class="post-title"><%=blog.title%></h2>
                            <h3 class="post-subtitle"><%=blog.description%></h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <a href="#!"><%=blog.createdBY%></a>
                            on <%=blog.createAt.toLocaleDateString()%>
                             <%=blog.createAt.toLocaleTimeString()%>
                             <%const date = new Date();%>
                             
                        </p>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                   <%})%>
                    <!-- Pager-->
                     
                    <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="/user/allBlog">Older Posts â†’</a></div>
                </div>
            </div>
        </div>
        <!-- Footer-->
        <%- include("_footer")%>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script defer src="/bootstrap/js/bootstrap.js"></script>
        <script defer src="../../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="/js/bootstrap.js"></script>
    </body>
</html>
