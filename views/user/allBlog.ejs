<!DOCTYPE html>
<html lang="en">
   <%- include("_header") %>
    <body>
        <!-- Navigation-->
        
        <%- include("_nav") %>
        <!-- Page Header-->
        <header  >
           
        </header>
        <!-- Main Content-->
        <div class="container m-5 px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <!-- Post preview-->
                   <%articles.map((blog)=>{%>
                    <div class="post-preview">
                        <a href="/article/<%= blog._id %>">
                            <h2  class="post-title"><%=blog.title%></h2>
                            <h3 style="max-width: 80%; overflow: hidden;" class="post-subtitle"><%=blog.description%></h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <a href="/profile/<%=blog.createdBY%>"><%=blog.createdBY%></a>
                            on <%=blog.createAt.toLocaleDateString()%>
                        </p>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                   <%})%>
                    <!-- Pager-->
                    
                </div>
            </div>
            
        </div>
        <!-- Footer-->
        <%- include("_footer")%>
       
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>
