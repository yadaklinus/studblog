<!DOCTYPE html>
<html lang="en">
   <%- include("_header") %>
    <body>
        <!-- Navigation-->
        <%- include("_nav") %>
        <!-- Page Header-->
        <header  >
           
        </header>
        <!-- Main Content-->
        <div class="container m-5 px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <!-- Post preview-->
                    
                   <%articles.map((blog)=>{
                    
                    if(blog.authorID == user._id){%>
                      <div class="post-preview">
                        <a href="/article/<%= blog._id %>">
                            <h2 class="post-title"><%=blog.title%></h2>
                            <h3 class="post-subtitle"><%=blog.description%></h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <a href="#!"><%=blog.createdBY%></a>
                            on <%=blog.createAt.toLocaleDateString()%>
                        </p>
                        <div class="d-flex">
                          <a class="btn btn-success mx-3" href="edit/<%= blog._id%>">Edit</a>
                          <form action="/user/delete/<%= blog._id%>?_method=DELETE" method="post">
                            <button class="btn btn-danger" type="submit">delete</button>
                        </form>
                        </div>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                    <%}
                   })%>
                    <!-- Pager-->
                    
                </div>
            </div>
            
        </div>
        <!-- Footer-->
        <%- include("_footer")%>
       
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>
