<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />

    <style>
        *{
    font-family: 'Courier New', Courier, monospace;
            
    }
    h1,h2,h3,h4,h5,h6{
        font-weight: 500;
    }
    a{
        text-decoration: none;

    }
    </style>
</head>
<body class="bg-dark text-white">
    <main>
        <!-- Login 6 - Bootstrap Brain Component -->
<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
          <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-3 p-md-4 p-xl-5">
              <div class="row">
                <div class="col-12">
                  <div class="mb-5">
                    <h3>Register</h3>
                  </div>
                </div>
              </div>
              <h2 class="text-danger"><%=error%></h2>
              <form class="m-4 g-3" action="/auth/signup" method="post">
                <div class="row gy-3 overflow-hidden">
                  <div class="col-12">
                    <div class="form-floating mb-3">
                    <input class="form-control" type="text" name="firstname" id="firstname" placeholder="firstname" required>
                      <label for="email" class="form-label">FirstName</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="form-floating mb-3">
                    <input class="form-control" type="text" name="lastname" id="lastname" placeholder="lastname" required>
                      <label for="email" class="form-label">LastName</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="form-floating mb-3">
                    <input class="form-control" type="text" name="username" id="username" placeholder="Username" required>
                      <label for="email" class="form-label">Username</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="form-floating mb-3">
                        <input class="form-control text-dark bg-light" type="email" name="email" id="username" placeholder="Email" required>
                      <label for="password" class="form-label">Email</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="form-floating mb-3">
                        <input class="form-control text-dark bg-light" type="number" name="phone" id="username" placeholder="Phone" required>
                      <label for="password" class="form-label">Phone</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="form-floating mb-3">
                        <input class="form-control  text-dark bg-light" maxlength="90" minlength="8" type="password" name="password" id="password"  placeholder="Password" required>
                      <label for="password" class="form-label">Password</label>
                    </div>
                    <input type="checkbox" onclick="toggleVisibility()"/>Show Password</br>  
                  </div>
                  
                  <div class="col-12">
                    <div class="d-grid">
                      <button class="btn bsb-btn-2xl btn-primary" type="submit">Create Account</button>
                    </div>
                  </div>
                </div>
              </form>
              <div class="row">
                <div class="col-12">
                  <hr class="mt-5 mb-4 border-secondary-subtle">
                  <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                    <a href="/auth/login" class="link-secondary text-decoration-none">Login</a>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
    </main>
</body>
<script>  
  function toggleVisibility() {  
    var getPasword = document.getElementById("password");  
    if (getPasword.type === "password") {  
      getPasword.type = "text";  
    } else {  
      getPasword.type = "password";  
    }  
  }  
  </script>  
</html>